<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mcorbridge.truecycle.WattOutputActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="breadcrumb"
        android:id="@+id/breadcrumb"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upper Limit(Watts)"
        android:layout_marginTop="100dp"
        android:id="@+id/textViewUpperLimit"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lower Limit(Watts)"
        android:layout_marginTop="480dp"
        android:id="@+id/textViewLowerLimit"
        android:layout_marginLeft="5dp" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="460dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:textAlignment="center"
            android:dividerHeight="1dp"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>




</RelativeLayout>
